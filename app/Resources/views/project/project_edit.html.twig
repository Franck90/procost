{% extends 'base.html.twig' %}

{% block title %}
    PROCOST - Edit project
{% endblock %}

{% block project %}
    <li class="sub-menu">
        <a class="active" href="#">
            <i class="fa fa-desktop"></i>
            <span>Les projets</span>
        </a>
    </li>
{% endblock %}

{% block body %}
    <section class="wrapper">

        <h3><i class="fa fa-angle-right"></i> Edition d'un projet</h3>

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="form-panel">
                        <form class="form-horizontal style-form">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Intitulé : </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Description : </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Type : </label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option>Opex</option>
                                        <option>Capex</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Livré : </label>
                                <div class="col-sm-10">
                                    <input type="checkbox" class="form-check-input">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">Date de création : </label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control">
                                </div>
                            </div>
                            <button type="button" class="btn btn-sm btn-success">Enregistrer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--/row -->
    </section>
{% endblock %}