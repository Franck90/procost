{% extends 'base.html.twig' %}

{% block title %}
    PROCOST - Project
{% endblock %}

{% block project %}
    <li class="sub-menu">
        <a class="active" href="{{ path('project') }}">
            <i class="fa fa-desktop"></i>
            <span>Les projets</span>
        </a>
    </li>
{% endblock %}

{% block body %}
    <section class="wrapper">

        <h3><i class="fa fa-angle-right"></i> Gestion des projets</h3>
        <a class="btn btn-success btn-sm pull-right" href="{{ path('project_new') }}">Ajouter un projet</a>

        <div class="row">
            <div class="col-lg-12 main-chart">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Intitulé</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Date de création</th>
                        <th>Livré</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if projects is defined %}
                        {% for project in projects %}
                            <tr>
                                <th>{{ project.name }}</th>
                                <th>{{ project.description }}</th>
                                <th>{{ project.type }}</th>
                                <th>{{ project.date | date('d/m/Y') }}</th>
                                <th>{{ project.send }}</th>
                                <th>
                                    <a href="#" class="btn btn-success btn-xs">
                                        <i class="fa fa-clock-o"></i>
                                    </a>
                                    <a href="{{ path('project_edit', {'id' : project.id}) }}" class="btn btn-primary btn-xs">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a href="{{ path('project_delete', {'id' : project.id}) }}" class="btn btn-danger btn-xs">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </th>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="col-md-2 col-sm-2 col-md-offset-5">
                <div class="pagination">
                    <a href="#">
                        <span class="badge bg-default">
                            <i class="fa fa-chevron-left"></i>
                        </span>
                    </a>
                    <a href="#"><span class="badge bg-theme">1</span></a>
                    <a href="#"><span class="badge bg-default">2</span></a>
                    <a href="#"><span class="badge bg-default">3</span></a>
                    <a href="#"><span class="badge bg-default">4</span></a>
                    <a href="#"><span class="badge bg-default">5</span></a>
                    <a href="#">
                        <span class="badge bg-default">
                            <i class="fa fa-chevron-right"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
        <!--/row -->
    </section>
{% endblock %}