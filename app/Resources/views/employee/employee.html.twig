{% extends 'base.html.twig' %}

{% block title %}
    PROCOST - Employés
{% endblock %}

{% block employee %}
    <li class="sub-menu">
        <a class="active" href="{{ path('employee') }}">
            <i class="fa fa-users"></i>
            <span>Les employés</span>
        </a>
    </li>
{% endblock %}

{% block body %}
    <section class="wrapper">

        <h3><i class="fa fa-angle-right"></i> Gestion des employés</h3>
        <a class="btn btn-success btn-sm pull-right" href="{{ path('employee_new') }}">Ajouter un employé</a>

        <div class="row">
            <div class="col-lg-12 main-chart">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                    <tr>
                        <th>Dénomination</th>
                        <th>Email</th>
                        <th>Métier</th>
                        <th>Coût (jour)</th>
                        <th>Embauche</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% if employees is defined %}
                            {% for employee in employees %}
                                <tr>
                                    {% if employee.active %}
                                        <th>{{ employee.name ~ " " ~ employee.surname }}</th>
                                        <th>{{ employee.mail }}</th>
                                        <th>{{ employee.job.name }}</th>
                                        <th>{{ employee.cost }}</th>
                                        <th>{{ employee.date |date('d/m/Y') }}</th>
                                    {%  else %}
                                        <th><strike>{{ employee.name ~ " " ~ employee.surname }}</strike></th>
                                        <th><strike>{{ employee.mail }}</strike></th>
                                        <th><strike>{{ employee.job.name }}</strike></th>
                                        <th><strike>{{ employee.cost }}</strike></th>
                                        <th><strike>{{ employee.date |date('d/m/Y') }}</strike></th>
                                    {%  endif %}

                                    <th>
                                        <a href="{{ path('employee_detail', {'id' : employee.id}) }}" class="btn btn-success btn-xs">
                                            <i class="fa fa-clock-o"></i>
                                        </a>
                                        <a href="{{ path('employee_edit', {'id' : employee.id}) }}" class="btn btn-primary btn-xs">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        {% if employee.active %}
                                            <a href="{{ path('employee_desactivate', {'id' : employee.id, 'fromDetail' : 'false'}) }}" class="btn btn-danger btn-xs">
                                                <i class="fa fa-trash-o"></i>
                                            </a>
                                        {% else %}
                                            <a href="{{ path('employee_activate', {'id' : employee.id, 'fromDetail' : 'false'}) }}" class="btn btn-success btn-xs">
                                                <i class="fa fa-trash-o"></i>
                                            </a>
                                        {% endif %}
                                    </th>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6 col-md-offset-5">
                <div class="pagination">
                    <div class="text-center">{{ knp_pagination_render(employees) }}</div>
                </div>
            </div>
        </div>
        <!--/row -->
    </section>
{% endblock %}